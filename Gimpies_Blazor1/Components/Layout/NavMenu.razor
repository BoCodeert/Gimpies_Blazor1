@using Gimpies_Blazor1.Database.Models.Entities

<MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.House">Home</MudNavLink>
    <AuthorizeView Policy="@UserPolicy.View_Shoes">     
            <MudNavLink Href="/shoeOverview" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.LibraryBooks">Schoenenoverzicht</MudNavLink>
    </AuthorizeView>
    <AuthorizeView Policy="@UserPolicy.View_Users">
            <MudNavLink Href="/userOverview" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Groups">Medewerkers</MudNavLink>
    </AuthorizeView>
    <AuthorizeView Policy="@UserPolicy.Add_Users">
            <MudNavLink Href="/salesOverview" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Euro">Verkoopoverzicht</MudNavLink>
    </AuthorizeView>
    <AuthorizeView>
        <Authorized>
                <MudNavLink Href="/logout" Icon="@Icons.Material.Filled.PersonRemove">Logout</MudNavLink>
        </Authorized>
        <NotAuthorized>
                <MudNavLink Href="/login" Icon="@Icons.Material.Filled.PersonAdd">Login</MudNavLink>            
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>


